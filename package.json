{
  "name": "react-graphql-fullstack",
  "author": "Tong Zhang",
  "version": "1.0.0",
  "keywords": [
    "React.js",
    "Typescript",
    "GraphQL",
    "Apollo",
    "MySQL"
  ],
  "description": "A fullstack blog-post web app built with React.js(Typescript) + GraphQL(Apollo)",
  "scripts": {
    "start": "concurrently \"npm run client\" \"npm run server\"",
    "build": "npm run clean && parcel build --log-level 1 src/index.html",
    "server": "nodemon --watch server/api_server ./server/api_server/index.js",
    "client": "node ./server/web_server/index.js",
    "clean": "rm -rf .cache dist",
    "postinstall": "cd server && npm install",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest --config --runInBand jest.config.js",
    "tsc:check": "tsc --noEmit"
  },
  "main": "src/index.tsx",
  "engines": {
    "node": ">= 11.0.0",
    "npm": ">= 6.0.0"
  },
  "browserslist": [
    "> 1%",
    "not dead",
    "not ie <= 11",
    "not op_mob > 1"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run build"
    }
  },
  "dependencies": {
    "graphql": "^15.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@apollo/client": "^3.1.2",
    "@testing-library/react": "^10.4.5",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "antd": "^4.4.3",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^1.3.1",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.17.0",
    "react-infinite-scroller": "^1.2.4",
    "react-quill": "^2.0.0-beta.2",
    "react-test-renderer": "^16.13.1",
    "sass": "^1.26.10",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  }
}
